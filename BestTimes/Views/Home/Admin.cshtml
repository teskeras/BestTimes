@model IEnumerable<BestTimes.Data.BestTime>

<h3>Unapproved times</h3>
@if (Model.Count() > 0)
{
    <div class="col-md-10">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Time</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    var name = item.FirstName + " " + item.LastName;
                    var time = item.Hours + "h " + item.Minutes + "m " + item.Seconds + "s " + item.Miliseconds + "ms";
                            <tr>
                                <td>@name</td>
                                <td>@time</td>
                                <td>@await Html.PartialAsync("FormApprovePartial", new FormIdModel { Id = item.Id })</td>
                                <td>@await Html.PartialAsync("FormRejectPartial", new FormIdModel { Id = item.Id })</td>
                            </tr>
                }
            </tbody>
        </table>
    </div>
}